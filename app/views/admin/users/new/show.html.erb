<style type="text/css">
  article {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-content: space-between;
  }

  .left-column {
    display: flex;
    flex-direction: column;
    flex-basis: 70%;
  }

  .right-column {
    display: flex;
    flex-direction: column;
  }
</style>

<header>
  <h2 class="crayons-title">Members</h2>
  <p><a href="<%= admin_users_path %>">‚Üê Go back to All members</a></p>
</header>

<article>
  <div class="left-column">
    <section class="crayons-card" id="profile">
      <h3><%= @user.name %></h3>
    </section>

    <section class="crayons-card" id="tools">
      <h3>Tools</h3>
    </section>

    <section class="crayons-card" id="account">
      <h3>Account Information & Settings</h3>
    </section>
  </div>

  <div class="right-column">
    <section class="crayons-card" id="status">
      <h3>Status</h3>
    </section>

    <section class="crayons-card" id="admin-roles">
      <h3>Admin Roles</h3>
    </section>

    <section class="crayons-card" id="tag-moderation">
      <h3>Tag Moderation</h3>
    </section>

    <section class="crayons-card" id="activity">
      <h3>Activity & Engagement</h3>
    </section>
  </div>
</article>
